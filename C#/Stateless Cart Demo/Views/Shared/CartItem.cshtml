<div class="panel panel-default">
    <div class="panel-heading" data-toggle="collapse" data-target="#items">
        Items
    </div>
    <div class="panel-body collapse in" id="items">
        @Html.Partial("CartAddItem")
        <br />
        <div class="row">
            <div class="col-sm-4 col-md-2" ng-repeat="item in CartItems">
                <div class="thumbnail">
                    <img src="https://tjournal.ru/static/main/img/ui/comments.media.placeholder.png" alt="Much Wow">
                    <div class="caption">
                        <h4>#: {{item.Id}}</h4>
                        <div class="input-group">
                            <input type="number" class="form-control" ng-model="item.Quantity">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button" ng-click="UpdateItemQty(item)">Update!</button>
                            </span>
                        </div>
                        <br />
                        <button class="btn btn-danger btn-md" ng-click="RemoveItem(item)">
                            Remove
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>