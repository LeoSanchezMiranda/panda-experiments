<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.diceouttesttutorial.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/rollResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Lets play!" />

    <ImageView
        android:id="@+id/dice1Image"
        android:src="@drawable/die_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rollResult"
        android:layout_marginTop="25dp"
        />

    <ImageView
        android:id="@+id/dice2Image"
        android:src="@drawable/die_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rollResult"
        android:layout_marginTop="25dp"
        />

    <ImageView
        android:id="@+id/dice3Image"
        android:src="@drawable/die_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rollResult"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/topRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dice2Image"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Top Roll: 0" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topRoll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:text="Score: 0"
        android:textSize="30sp" />


</RelativeLayout>
